          <p>Your content.</p>
        </div>
      </div> -->

      <div class="row" ng-show="show_view_Applications">
        <div class="col-lg-12">
          <%- include applications.ejs %>
        </div>
      </div>

      <!-- <div class="row" ng-show="show_view_Settings">
        <div class="col-lg-12">
          <h2>Settings</h2>
          <div seneca-settings kind="user"></div>
        </div>
      </div> -->

      <div class="row" ng-show="show_view_Account" ng-controller="Account">
        <div class="col-lg-12">
          <h2 ng-i18next="[html]title.your-details"></h2>
          <form role="form">
            <div class="form-group" style="width:45%;float:right;text-align:right">
              <div class="dropzoneWrap">
                <div ng-show="dropSupported" class="dropbox" ng-file-drop="onFileSelect($files);" ng-file-drop-available="dropSupported=true">
                  <div ng-show="show_progress" class="progress"><div class="bar" ng-style="{'width':progress}"></div></div>
                  <img ng-show="imageUrl" ng-src="{{imageUrl}}" width="200px">
                </div>
                <a ng-show="imageUrl" style="color: #ccc;" ng-click="removeImage()" ng-i18next="[html]link.remove-image"></a>
              </div>
              <div ng-show="!dropSupported" style="margin-left:200px;width:200px;text-align:center;float:right" ng-i18next="[html]label.drop-not-supported"></div>
              <div ng-show="dropSupported" style="margin-left:200px;width:200px;text-align:center;float:right"><label ng-i18next="[html]label.drop-photo"></label></div>
            </div>

            <div ng-class="{'form-group':true,mvp_seek_input:seek_name}">
              <label for="field_name" ng-i18next="label.name"></label>
              <input type="text" class="form-control half-width" id="field_name" ng-model="field_name">
            </div>
            <div ng-class="{'form-group':true,mvp_seek_input:seek_email}">
              <label for="field_email" ng-i18next="label.email"></label>
              <input type="text" class="form-control half-width" id="field_email" ng-model="field_email">
            </div>

            <button type="submit" class="btn btn-primary" style="width:50%" ng-click="update_user()" ng-i18next="[html]btn.update"></button>

            <p class="account_msg">
              {{details_msg | i18next}}
            </p>
          </form>

          <h2ng-i18next="[html]title.change-password"></h2>
          <form role="form">
            <div class="form-group">
              <label for="field_password" ng-i18next="label.password"></label>
              <input type="password" class="form-control half-width" id="field_password" ng-model="field_password">
            </div>
            <div class="form-group">
              <label for="field_repeat" ng-i18next="label.verify-password"></label>
              <input type="password" class="form-control half-width" id="field_repeat" ng-model="field_repeat">
            </div>

            <button type="submit" class="btn btn-primary" style="width:50%" ng-click="change_pass()" ng-i18next="[html]btn.change"></button>

            <p class="account_msg">
              {{password_msg | i18next}}
            </p>
          </form>
        </div>
      </div>

    </div> <!-- /container -->

    </div>

    <%- include footer.ejs %>

    <%- include scripts.ejs %>

  </body>
</html>
