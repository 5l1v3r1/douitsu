<!DOCTYPE html>
<html lang="en">

  <%- include head.ejs %>

  <body class="account" ng-app="account" ng-controller="Main" ng-cloak>

    <div id="wrap">

    <div class="navbar navbar-inverse navbar-fixed-top" ng-controller="NavBar">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#" ng-i18next="[html]app.name"></a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">{{user.email}}<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a ng-click="btn_applications()" ng-i18next="nav.application"></a></li>
                <li ng-show="show_account"><a ng-click="btn_account()" ng-i18next="nav.account"></a></li>
                <li><a ng-click="btn_signout()" ng-i18next="nav.signout"></a></li>
              </ul>
            </li>
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </div>


    <div class="container" style="margin-top:50px" ng-controller="TabView">

      <!-- <ul class="nav nav-tabs">
        <li ng-repeat="name in views" ng-class="{active:name==curtab}"><a href="" ng-click="tabview(name)">{{name}}</a></li>
      </ul> -->

